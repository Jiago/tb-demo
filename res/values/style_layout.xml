<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 固定自身大小 -->
    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 横向分布 -->
    <style name="layout_horizontal" parent="layout_full">
        <item name="android:layout_width">0px</item>
    </style>

    <!-- 纵向分布 -->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0dip</item>
    </style>
    <!-- 主页按钮布局 -->
    <style name="layout_btn" parent="layout_full">
        <item name="android:background">@drawable/tab_selector_backgound</item>
        <item name="android:textSize">@dimen/size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tab_selector_textcolor</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>
    <!-- 我的淘宝按钮布局 -->
    <style name="layout_btn_mytaobao" parent="layout_full">
        <item name="android:background">@drawable/account_button_select</item>
        <item name="android:textSize">@dimen/size</item>
        <item name="android:padding">@dimen/accout_padding</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- 搜索按钮布局 -->
    <style name="search_layout_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textColor">@drawable/tab_selector_textcolor</item>
    </style>
    <!-- checkbox样式 -->
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
    

    <!-- 星级进度条样式 -->
	<style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/room_rating_bar</item>
		<item name="android:minHeight">30dip</item>
		<item name="android:maxHeight">30dip</item>
	</style>
	<!-- 星级进度条样式 -->
	<style name="badRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/bad_rating_bar</item>
		<item name="android:minHeight">30dip</item>
		<item name="android:maxHeight">30dip</item>
	</style>


</resources>