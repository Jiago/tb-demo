<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="@string/taobao"
            android:textSize="@dimen/mytaobaotextSize"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@drawable/reg_bt_on" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mytaobao_button_select"
            android:src="@drawable/detail_ww" />

        <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/mytaobao_button_select" 
            android:src="@drawable/menu4"
            android:layout_weight="1"        
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tb_bk_my_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" >

            <com.pactera.taobaoprogect.util.RoundImageView
                android:id="@+id/touxiang_roundimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/desc"
                imagecontrol:border_outside_color="#FFFFFFFF"
                imagecontrol:border_thickness="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/username_textveiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/taobao"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/mytaobaotextSize"
                    android:textStyle="bold" />
                

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/tb_icon_my_edit_36"
                    android:text="我的收货地址"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" 
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="淘金币  1000"
                        android:textSize="@dimen/size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    天猫积分  1000"
                        android:textSize="@dimen/size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/accout_buttongroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:orientation="horizontal" 
            android:background="#FFFFFF">

            <Button
                android:id="@+id/tb_icon_all_pay"
                style="@style/layout_btn_mytaobao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tb_icon_all_pay_48"
                android:text="@string/tb_pay" 
                />
            <View     
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:background="@drawable/reg_bt_on"    
                android:layout_gravity="center_horizontal"    />

            <Button
                android:id="@+id/tb_icon_all_deliver"
                style="@style/layout_btn_mytaobao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tb_icon_all_deliver_48"
                android:text="@string/tb_deliver" />
            <View      
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:background="@drawable/reg_bt_on"    
                android:layout_gravity="center_horizontal"    />

            <Button
                android:id="@+id/tb_icon_all_receive"
                style="@style/layout_btn_mytaobao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tb_icon_all_receive_48"
                android:text="@string/tb_receive" />
            <View      
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:background="@drawable/reg_bt_on"    
                android:layout_gravity="center_horizontal"    />

            <Button
                style="@style/layout_btn_mytaobao"
                android:id="@+id/tb_icon_all_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tb_icon_all_evaluate_48"
                android:text="@string/tb_evaluate"
                android:textSize="@dimen/size" />
            <View      
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:background="@drawable/reg_bt_on"    
                android:layout_gravity="center_horizontal"    />

            <Button
                android:id="@+id/tb_icon_all_refund"
                style="@style/layout_btn_mytaobao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tb_icon_all_refund_48"
                android:text="@string/tb_refund" />
   
        </LinearLayout>       
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6.51"
        android:background="#E0E0E0"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/all_indent_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_button_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/all_indent_button"
                android:textColor="@drawable/reg_bt_on"
                android:textSize="@dimen/mytaobaotextSize" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/textView1"
                android:src="@drawable/table_arrow" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/imageView1"
                android:text="@string/all_button"
                android:textColor="@drawable/reg_bt_on"
                android:textSize="@dimen/size"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="1dp"
            >

            <Button
                
                android:id="@+id/Collect_baby_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_button_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/Collect_baby_button"
                android:textColor="@drawable/reg_bt_on"
                android:textSize="@dimen/mytaobaotextSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/table_arrow" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="15dp"
            >

            <Button
                
                android:id="@+id/Collect_shop_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_button_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/Collect_shop_button"
                android:textColor="@drawable/reg_bt_on"
                android:textSize="@dimen/mytaobaotextSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/table_arrow" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <Button
                
                android:id="@+id/alipay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_button_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/alipay_button"
                android:textColor="@drawable/reg_bt_on"
                android:textSize="@dimen/mytaobaotextSize"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/table_arrow" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

